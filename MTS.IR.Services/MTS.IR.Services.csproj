<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="EmailTemplates\FeedbackEmail.cshtml" />
    <None Remove="EmailTemplates\NewsEmail.cshtml" />
    <None Remove="Hosted\CheckEmail.cshtml" />
    <None Remove="Resource\mts-logo.jpg" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="EmailTemplates\FeedbackEmail.cshtml">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </EmbeddedResource>
    <Content Include="Resource\mts-logo.jpg">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="EmailTemplates\NewsEmail.cshtml">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="EmailTemplates\CheckEmail.cshtml">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LinqKit.Microsoft.EntityFrameworkCore" Version="5.1.2" />
    <PackageReference Include="QA.DotNetCore.Caching" Version="2.0.0-beta" />
    <PackageReference Include="RazorLight" Version="2.0.0" />
    <PackageReference Include="System.Drawing.Common" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MTS.IR.Interfaces\MTS.IR.Interfaces.csproj" />
    <ProjectReference Include="..\MTS.IR.Postgre.DAL.NotQP\MTS.IR.Postgre.DAL.NotQP.csproj" />
    <ProjectReference Include="..\MTS.IR.Postgre.DAL\MTS.IR.Postgre.DAL.csproj" />
    <ProjectReference Include="..\MTS.IR.Templates\MTS.IR.Templates.csproj" />
  </ItemGroup>

</Project>
