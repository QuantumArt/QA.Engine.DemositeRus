@model Demosite.ViewModels.NewsRoomViewModel

<section class="news">
  <div class="wrapper">
    <h2 class="news__title">@Model.Title</h2>
    <div class="news__group">
      @foreach (var block in Model.Blocks)
      {
        <div class="news__col">
          <div class="news__tile">
            <h4 class="news__tile-title">@block.Title</h4>
            <div class="news__slider" data-news-slider="">
              @foreach (var post in block.Items)
              {

                <div class="news__card">
                  <div class="news__card-title"><a href="@post.Url">@post.Title</a></div>
                  <div class="news__card-date">@(post.PostDate?.ToString("MMMM dd, yyyy") ?? String.Empty)</div>
                  <div class="news__card-descr">@post.Brief</div>
                </div>
              }
            </div>
            <div class="news__slider-nav" data-news-slider-nav="">
            </div>
            <a class="news__tile-read-more" href="@block.Url">@($"Все {@block.Title}")</a>
          </div>
        </div>
      }
    </div>
  </div>
</section>



