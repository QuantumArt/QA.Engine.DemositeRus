@using Demosite.ViewModels;
@using Demosite.ViewModels.Search;
@model SearchResult;

<section class="page__section">
    <div class="wrapper">
        <div class="flex-grow-1 px-3 pt-3">
            <div class="ps-3">
                <h1 class="fs-3 text-center mb-4">Поиск по сайту</h1>
                <div class="nav__search">
                    @await Component.WidgetZone(Html, "SiteSearchHeaderZone")
                </div>
                @if (!string.IsNullOrEmpty(Model?.SearchCorrection?.Text))
                {
                    var resultSearch = Model.SearchCorrection.ResultsAreCorrected ? Model.SearchCorrection.Snippet : Model.SearchCorrection.OriginalQuery;
                    var insteadSearch = Model.SearchCorrection.ResultsAreCorrected ? Model.SearchCorrection.OriginalQuery : Model.SearchCorrection.Text;
                    <p class="fs-6 text-secondary mb-0">Показаны результаты по запросу: @Html.Raw(resultSearch)</p>
                    <p class="fs-6 text-secondary mb-0">Искать вместо этого: <a href='@Url.Action("Search", "SearchResultPage", new {query = insteadSearch, withCorrect = !Model.SearchCorrection.ResultsAreCorrected})'>@insteadSearch</a> </p>
                }
                <p class="fs-6 text-secondary mb-0">Всего найдено: @(Model != null ? @Model.DocumentsCount : "0")</p>
            </div>
            @if (Model?.DocumentsCount > 0)
            {
                <ul class="list-group list-group-flush news-list mt-0">
                    @foreach (Document document in Model.Documents)
                    {
                        <li>
                            <div class="card col-12 up-news">
                                <div class="card-body">
                                    <h5 class="card-title">@document.Title</h5>
                                    <p class="card-subtitle mb-2 text-muted">
                                        <span>@document.Category</span>
                                    </p>
                                    <p class="card-text">@document.Description</p>
                                    <a href="@document.SearchUrl" class="btn btn-light">Перейти</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
                <vc:pagination pages-count="@Model.PagesCount" />
            }
        </div>
    </div>
</section>
